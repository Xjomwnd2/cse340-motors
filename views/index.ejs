<%- include('partials/head') %>

<!-- Main Content -->
<main>
  <h1>Welcome to CSE Motors!</h1> 
<%- messages() %>

  <!-- Hero Section with Delorean -->
  <section class="hero">
    <div class="car-details">
      <div class="car-features">
        <h2>DMC Delorean</h2>
        <ul>
          <li>3 Cup holders</li>
          <li>Superman doors</li>
          <li>Fuzzy dice!</li>
        </ul>
        <a href="#" class="cta-button">Own Today</a>
      </div>
      <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean" class="delorean-img">
    </div>
  </section>

  <div class="content-sections">
    <!-- Reviews -->
    <section class="reviews">
      <h2>DMC Delorean Reviews</h2>
      <ul>
        <li>"So fast it's almost like traveling in time." (4/5)</li>
        <li>"Coolest ride on the road." (4/5)</li>
        <li>"I'm feeling McFly!" (5/5)</li>
        <li>"The most futuristic ride of our day." (4.5/5)</li>
        <li>"80's livin and I love it!" (5/5)</li>
      </ul>
    </section>

    <!-- Upgrades -->
    <section class="upgrades">
      <h2>Delorean Upgrades</h2>
      <div class="upgrade-grid">
        <div class="upgrade-item">
          <div class="upgrade-image">
            <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
          </div>
          <a href="#" class="upgrade-name">Flux Capacitor</a>
        </div>

        <div class="upgrade-item">
          <div class="upgrade-image">
            <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
          </div>
          <a href="#" class="upgrade-name">Flame Decals</a>
        </div>

        <div class="upgrade-item">
          <div class="upgrade-image">
            <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
          </div>
          <a href="#" class="upgrade-name">Bumper Stickers</a>
        </div>

        <div class="upgrade-item">
          <div class="upgrade-image">
            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
          </div>
          <a href="#" class="upgrade-name">Hub Caps</a>
        </div>
      </div>
    </section>
  </div>
</main>